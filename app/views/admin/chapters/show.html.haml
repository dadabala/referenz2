.grid_12
  %h2 
    = "#{@chapter.number} &ndash; #{@chapter.title}"
  %p 
    = @chapter.body
    
  %ul
    -unless @chapter.sections.empty?
      - @chapter.sections.each do |section| 
        %li
          = section.number
          = link_to section.title, edit_admin_chapter_section_path(@chapter, section)
    - else
      %li No Sections
      
  %p
    = link_to "New Section", new_admin_chapter_section_path(@chapter)
      
        
    