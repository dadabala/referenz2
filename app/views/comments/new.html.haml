%h1 Kommentar schreiben

= error_messages_for :comment

- url = @parent_comment ? page_comment_comments_path(@page, @parent_comment) : objects_path
- form_for(:comment, :url => url) do |f|
  = render :partial => "form", :locals => {:f => f}
  %p= submit_tag "Speichern"

= link_to 'Back', objects_path
